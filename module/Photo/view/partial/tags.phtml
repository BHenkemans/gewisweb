<?php
$this->scriptUrl()->requireUrl('photo/photo/tag/remove', ['photo_id', 'lidnr'])
    ->requireUrl('member/view', ['lidnr']);
?>
<?php if ($this->acl('photo_service_acl')->isAllowed('tag', 'view')): ?>
    <strong><?= $this->escapeHtml($this->photo->getAlbum()->getName()) ?></strong>
    <?php $tagCount = $this->photo->getTags()->count();
    $i = 1; ?>
    <?= $tagCount ? $this->translate(', in this photo:') : '' ?>
    <div class="tagList tagList-<?= $this->photo->getId() ?>">
        <?php foreach ($this->photo->getTags() as $tag): ?>
            <span style="display:block">
                <a href="<?= $this->url(
                    'photo/album',
                    [
                        'album_id' => $tag->getMember()->getLidnr(),
                        'album_type' => 'member',
                    ],
                ) ?>">
                    <?= $this->escapeHtml($tag->getMember()->getFullName()) ?>
                </a>&nbsp;
                <a class="remove-tag"
                   href="<?= $this->url(
                    'photo/photo/tag/remove',
                    [
                        'photo_id' => $this->photo->getId(),
                        'lidnr' => $tag->getMember()->getLidnr(),
                    ],
                ); ?>">
                    <span class="fas fa-times" aria-hidden="true"></span>
                </a>
                <?php
                $i++;
                if ($i < $tagCount)
                    echo ',&nbsp';
                if ($i == $tagCount)
                    echo 'and';
                ?>
            </span>
        <?php endforeach; ?>
    </div>
<?php endif; ?>
<?php if ($this->acl('photo_service_acl')->isAllowed('tag', 'add')): ?>
    <div>
        <form class="form-inline tagForm">
            <div class="form-group">
                <label for="tagSearch"><i class="fas fa-plus"></i> <?= $this->translate('Tag someone') ?>:</label>
                <input type="text" data-url="<?= $this->url(
                    'photo/photo/tag/add',
                    [
                        'photo_id' => $this->photo->getId(),
                        'lidnr' => 'lidnr',
                    ],
                ); ?>" class="tagSearch" name="tagSearch">
            </div>
        </form>
        <br><br><br>
    </div>
<?php endif; ?>
